#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main ()
{
	setlocale (LC_ALL, "Portuguese_Brazil");
	
	int num_1, num_2;
	char letra;
	int soma, dif, prod, quoc;

	printf ("Digite a letra correspondente a operação que voce deseja realizar, sendo 'a' para soma, 'b' para subtração, 'c' para multiplicação e 'd' para divisão.\n");
	scanf ("%c", &letra);
	printf ("Digite um número inteiro.\n");
	scanf ("%d", &num_1);
	printf ("Digite mais um número inteiro.\n");
	scanf ("%d", &num_2);
	
		switch (letra)
		{
			case 'a':
				soma = num_1 + num_2;
				printf ("A soma desses números é %d.\n", soma);
				break;
			case 'b':
				dif = num_1 - num_2;
				printf ("A diferença desses números é %d.\n", dif);
				break;
			case 'c':
				prod = num_1 * num_2;
				printf ("O produto desses números é %d.\n", prod);
				break;
			case 'd':
				quoc = num_1 / num_2;
				printf ("O quociente desses números é %d.\n", quoc);
				break;	
			default:
				printf ("Operação inválida!");
				break;
		}	
	return 0;
}
